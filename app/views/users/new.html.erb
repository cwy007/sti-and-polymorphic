<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card m-5 p-3 bg-light border-primary">
      <div class="card-block">
        <h4 class="card-title text-center h1">Sign up</h4>
        <%= simple_form_for @user do |f| %>
          <%= f.input :username %>
          <%= f.input :email %>
          <%= f.input :password %>
          <%= f.input :password_confirmation %>

          <%= f.submit 'Sign up', class: 'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
